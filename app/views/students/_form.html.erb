<%= form_for @student do |f| %>
    <% if flash[:student_errors] %>
        <% flash[:student_errors].each do |error| %>
            <p><%= error %></p>
        <% end %>
    <% end %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :mod %><br>
    <%= f.number_field :mod %><br>

    <%= f.submit %>
<% end %>