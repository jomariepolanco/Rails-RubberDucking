<%= form_for @duck do |f| %>
    <% if flash[:duck_errors] %>
        <% flash[:duck_errors].each do |error| %>
            <p><%= error %></p>
        <% end %>
    <% end %>
    <%= f.label :name %><br>
    <%= f.text_field :name %><br>

    <%= f.label :description %><br>
    <%= f.text_field :description %><br>

    <%= f.label "Student" %><br>
    <%= f.collection_select :student_id, Student.all, :id, :name %><br>

    <%= f.submit%>
<% end %>